[user]
	name = sfikastheo
	email = theodore.sfikas@toolsforhumanity.com

[init]
    defaultBranch = main

[merge]
  tool = nvimdiff
  conflictstyle = zdiff3

[core]
    pager = delta

[color]
    interactive = true
    branch = true
    status = true

[interactive]
    diffFilter = delta --color-only

[url "ssh://github.com/worldcoin"]
    insteadOf = https://github.com/worldcoin

[mergetool]
  prompt = false
  keepBackup = false

[mergetool "nvimdiff"]
  layout = "LOCAL,BASE,REMOTE / MERGED"

[delta]
    navigate = true  # use n and N to move between diff sections
    dark = true      # or light = true, or omit for auto-detection
    line-numbers-left-format = ""
    line-numbers-right-format = "â”‚ "

[alias]
    root = rev-parse --show-toplevel
    cdroot = !cd `git root`
    unstage = reset HEAD
    sh = show --color
    mt = mergetool
    co = checkout
    cb = checkout -b
    st = status
    rf = reflog

    cm = commit
    cmf = commit --allow-empty
    ca = commit --amend
    caf = commit --amend --no-edit --allow-empty
    cu = reset HEAD^1
    me = merge --no-edit
    mu = reset --merge

    lo = log -m --simplify-merges --color --pretty=format:'%Cred%h%Creset %s %Cgreen(%cr) %Cblue%an <%ae>%Creset' --abbrev-commit
    lg = log --graph --date=short --decorate --first-parent --pretty=format:'%C(auto)%h %ad %d %s'
    lga = log --graph --date=short --decorate --all --pretty=format:'%C(auto)%h %ad %d %s'
    df = diff --color
    dfs = diff --staged --color

    f = fetch
    fa = fetch --all
    fo = fetch origin
    fu = fetch upstream

    ps = push
    psf = push -f
    psb = !git push -u origin $(git branch --show-current)

    pl = pull
    plo = pull origin
    plf = "!f() { git fetch origin \"$1\" && git reset --hard origin/\"$1\"; }; f"

    a = add
    aa = add --all
    af = add --all -f

    unt = ls-files --other --exclude-standard
    sta = ls-files --staged
    mod = ls-files --modified
    del = ls-files --deleted
    ign = ls-files -o -i --exclude-standard

    sh = stash
    shp = stash pop
    shl = stash list
    shd = stash drop
    shc = stash clear
    sha = stash apply

    ch = cherry-pick
    chc = cherry-pick --continue
    chq = cherry-pick --quit
    cha = cherry-pick --abort

    rv = revert
    rvc = revert --continue
    rva = revert --abort

    rb = rebase
    rbi = rebase -i
    rbc = rebase --continue
    rba = rebase --abort
    rbs = rebase --skip

    br = branch
    brd = branch -D
    bru = branch --set-upstream
    brr = !git branch --set-upstream-to=origin/$(git branch --show-current)

    re = remote -v
    rea = remote add
    rer = remote rm

    sm = submodule
    sms = submodule sync
    smu = submodule update
    smi = submodule update --init --recursive
    sme = submodule foreach
    smp = submodule foreach "(git pull)&"

[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[safe]
	directory = /etc/nixos
