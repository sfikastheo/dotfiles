// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings`
{
  // Editor Behavior
  "cursor_shape": "bar",
  "cursor_blink": false,
  "ssh_connections": [
    {
      "host": "localhost",
      "username": "root",
      "port": 2222,
      "args": [],
      "projects": [
        {
          "paths": ["/workspace"]
        }
      ]
    }
  ],
  "edit_predictions": {
    "mode": "subtle"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "vim_mode": true,
  "confirm_quit": true,
  "base_keymap": "None",
  "relative_line_numbers": "enabled",
  "line_indicator_format": "short",
  "show_edit_predictions": true,

  // LLM Configuration
  "language_models": {
    "openai": {
      "available_models": [
        {
          "name": "gpt-5",
          "display_name": "gpt-5 high",
          "reasoning_effort": "high",
          "max_tokens": 272000,
          "max_completion_tokens": 20000
        }
      ]
    }
  },

  // AI Assistant Configuration
  "agent": {
    "always_allow_tool_actions": true,
    "default_view": "text_thread",
    "default_profile": "ask",
    "enabled": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5-mini"
    },
    "inline_assistant_model": {
      "provider": "openai",
      "model": "gpt-5.2"
    },
    "commit_message_model": {
      "provider": "openai",
      "model": "gpt-4o-mini"
    },
    "thread_summary_model": {
      "provider": "google",
      "model": "gemini-2.0-flash"
    }
  },

  // Vim Configuration
  "vim": {
    "toggle_relative_line_numbers": true,
    "use_system_clipboard": "always"
  },

  // UI Fonts and Appearance
  "buffer_font_family": "GeistMono Nerd Font",
  "buffer_font_size": 12.5,
  "ui_font_family": "GeistMono Nerd Font",
  "ui_font_size": 12.5,
  "agent_ui_font_size": 14,
  "agent_buffer_font_size": 12.5,
  "tab_bar": { "show": true },
  "scrollbar": { "show": "auto" },

  // Theme Configuration
  "theme": "Min Dark (Solid)",

  // UI Layout and Panels
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false
  },
  "gutter": {
    "line_numbers": true,
    "runnables": false,
    "folds": true
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "fixed"
  },

  // Git Integration
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },

  // Diagnostics and Error Handling
  "diagnostics": {
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 8,
      "min_column": 0,
      "max_severity": null
    },
    "include_warnings": true
  },

  // Language Server Configuration
  "lsp": {
    "nil": {
      "initialization_options": {
        "formatting": {
          "command": ["nixfmt"]
        }
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "checkOnSave": true,
        "check": {
          "workspace": false
        }
      }
    }
  },

  // Extensions
  "auto_install_extensions": {
    // Themes
    "git-firefly": true,
    "melange": true,
    "zedokai": true,
    // Languages
    "terraform": true,
    "dockerfile": true,
    "basher": true,
    "csharp": true,
    "fsharp": true,
    "graphql": true,
    "lua": true,
    "make": true,
    "nim": true,
    "nix": true,
    "proto": true,
    "scheme": true,
    "scss": true,
    "sql": true,
    "html": true,
    "ini": true,
    "zig": true,
    "xml": true,
    "latex": true,
    "toml": true
  }
}
