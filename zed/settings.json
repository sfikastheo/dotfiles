// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings`
{
  // MCP Servers
  "ssh_connections": [
    {
      "host": "localhost",
      "username": "root",
      "port": 2222,
      "projects": [
        {
          "paths": [
            "/root"
          ]
        },
        {
          "paths": [
            "/workspace"
          ]
        }
      ]
    }
  ],
  "context_servers": {
    "mcp-server-context7": {
      "source": "extension",
      "enabled": true,
      "settings": {
        "default_minimum_tokens": "10000"
      }
    }
  },

  // Editor Behavior
  "vim_mode": true,
  "confirm_quit": true,
  "base_keymap": "Emacs",
  "relative_line_numbers": true,
  "line_indicator_format": "short",
  "show_edit_predictions": true,

  // LLM Configuration
  "language_models": {
    "openai": {
      "available_models": [
        {
          "name": "gpt-5",
          "display_name": "gpt-5 high",
          "reasoning_effort": "high",
          "max_tokens": 272000,
          "max_completion_tokens": 20000
        },
      ]
    }
  },

  // AI Assistant Configuration
  "agent": {
    "always_allow_tool_actions": true,
    "default_view": "text_thread",
    "default_profile": "write",
    "enabled": true,
    "default_model": {
      "provider": "openai",
      "model": "gpt-5"
    },
    "inline_assistant_model": {
      "provider": "anthropic",
      "model": "claude-3-5-sonnet"
    },
    "commit_message_model": {
      "provider": "openai",
      "model": "gpt-4o-mini"
    },
    "thread_summary_model": {
      "provider": "google",
      "model": "gemini-2.0-flash"
    }
  },

  // Vim Configuration
  "vim": {
    "toggle_relative_line_numbers": true,
    "use_system_clipboard": "always"
  },

  // UI Fonts and Appearance
  "buffer_font_family": "SpaceMono Nerd Font Mono",
  "buffer_font_size": 12,
  "ui_font_family": "SpaceMono Nerd Font Mono",
  "ui_font_size": 12,
  "tab_bar": { "show": true },
  "scrollbar": { "show": "auto" },

  // Theme Configuration
  "theme": {
    "mode": "system",
    "light": "Arrakis Day",
    "dark": "Gruvbox Dark Hard"
  },

  // UI Layout and Panels
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false
  },
  "gutter": {
    "line_numbers": true,
    "code_actions": false,
    "runnables": false,
    "folds": true
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "fixed"
  },

  // Diagnostics and Error Handling
  "diagnostics": {
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 8,
      "min_column": 0,
      "max_severity": null
    },
    "include_warnings": true
  },

  // Language Server Configuration
  "lsp": {
    "nil": {
      "initialization_options": {
        "formatting": {
          "command": ["nixfmt"]
        }
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "checkOnSave": {
          "command": "clippy"
        }
      }
    }
  },

  // Language-Specific Configuration
  "languages": {
    "zig": {
      "formatter": {
        "external": {
          "command": "zig fmt"
        }
      }
    },
    "Rust": {
      "formatter": {
        "external": {
          "command": "cargo fmt"
        }
      }
    }
  },

  // Extensions
  "auto_install_extensions": {
    // Themes
    "git-firefly": true,
    "melange": true,
    "zedokai": true,
    // Languages
    "terraform": true,
    "dockerfile": true,
    "basher": true,
    "csharp": true,
    "fsharp": true,
    "graphql": true,
    "lua": true,
    "make": true,
    "nim": true,
    "nix": true,
    "proto": true,
    "scheme": true,
    "scss": true,
    "sql": true,
    "html": true,
    "ini": true,
    "zig": true,
    "xml": true,
    "latex": true,
    "toml": true
  }
}
