// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings`
{
  "vim_mode": true,
  "ui_font_size": 18,
  "buffer_font_size": 18,
  "relative_line_numbers": true,
  "diagnostics": {
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 8,
      "min_column": 0,
      "max_severity": null
    },
    "include_warnings": true
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Gruvbox Dark Hard"
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "file_scan_exclusions": [
    "**/.git", // Git
    "**/.hg", // Mercurial
    "**/.jj", // Jujutsu
    "**/.DS_Store" // macOS
  ],
  "indent_guides": {
    "enabled": true,
    "coloring": "fixed"
  },
  "gutter": {
    "line_numbers": true,
    "code_actions": false,
    "runnables": false,
    "folds": true
  },
  "notification_panel": {
    "dock": "left",
    "button": false
  },
  "line_indicator_format": "short",
  "task": {
    "show_status_indicator": false
  },
  "terminal": {
    "shell": {
      "program": "zsh"
    },
    "dock": "right",
    "default_width": 640,
    "default_height": 320,
    "working_directory": "current_project_directory",
    "blinking": "terminal_controlled",
    "cursor_shape": null,
    "alternate_scroll": "off",
    "option_as_meta": false,
    "copy_on_select": true,
    "button": true,
    "line_height": "standard",
    "toolbar": {
      "title": false,
      "breadcrumbs": false
    }
  },
  "search": {
    "case_sensitive": true
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },
  "outline_panel": {
    "button": false
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": "never"
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false
  }
}
